        <img class="closeButton" onclick="toggleForm(`deleteCourseForm`)" src="/addIcon" alt="close icon"/>
        <label class="form_title bold">Delete</label>

        <div class="form_div block">
            <label for="courseDelete">idCourse:</label>
            <input type="text" id="courseDelete" name="courseDelete">
