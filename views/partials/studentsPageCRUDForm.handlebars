<div class="form_container">
    <form class="form hide" id="add-student-form" method="POST" action="/addStudent">
        <img class="closeButton" onclick="toggleForm(`add-student-form`)" src="/addIcon"/>
        <label class="form_title bold">Student Details</label>
        <div class="form_div">
            <label for="username">*Username:</label>
            <input type="text" id="username" name="username" required>
        </div>

        <div class="form_div">
            <label for="email">*Email:</label>
            <input type="email" id="email" name="email" required>
        </div>

        <div class="form_div extraMarginBottom">
            <label for="major">*Major:</label>
            <select id="major" name="major" required>
                <option value="" disabled selected>Choose a major</option>
                {{#each majors}}
                    <option value="{{majorName}}">{{majorName}}</option>
                {{/each}}
            </select>
        </div>

        <label class="form_title bold">Student Address</label>
        <div class="form_div">
            <label for="streetName">*Street Name:</label>
            <input type="text" id="streetName" name="streetName" required>
        </div>

        <div class="form_div">
            <label for="city">*City:</label>
            <input type="text" id="city" name="city" required>
        </div>

        <div class="form_div">
            <label for="state">*State:</label>
            <input type="text" id="state" name="state" required>
        </div>

        <div class="form_div">
            <label for="zipcode">*Zipcode:</label>
            <input type="number" id="zipcode" name="zipcode" required>
        </div>

        <div class="form_div">
            <label for="country">*Country:</label>
            <input type="text" id="country" name="country" required>
        </div>

        <button id="addStudentButton" type="submit">Submit</button>
    </form>
</div>

<div class="form_container">
    <form class="form  hide" id="updateStudentForm" method="POST" action="/updateStudent">
        <img class="closeButton" onclick="toggleForm(`updateStudentForm`)" src="/addIcon" alt="close icon"/>
